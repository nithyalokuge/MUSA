<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Settings - Musa</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Mona+Sans:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include("partials/header-sidebar-musa") %>

    <main>
      <section class="py-5">
        <div class="container">
          <div class="mb-5">
            <a href="/" class="back-to-home" aria-label="Back to home page">
              <i class="bi bi-arrow-90deg-left" aria-hidden="true"></i>
            </a>
            <h2 class="d-inline">Settings</h2>
          </div>
          <div class="mb-5">
            <h3>Display & Contrast</h3>
            <div class="radio-group">
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="contrast" value="default" checked aria-label="Default contrast">
                  <span class="visual-box">
                    <i class="bi bi-sun" aria-hidden="true"></i>
                  </span>
                </label>
                <div class="option-label">Default</div>
              </div>
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="contrast" value="dark" aria-label="Dark mode">
                  <span class="visual-box">
                    <i class="bi bi-moon" aria-hidden="true"></i>
                  </span>
                </label>
                <div class="option-label">Dark Mode</div>
              </div>
            </div>
          </div>
          <div class="mb-5">
            <h3>Text Size</h3>
            <div class="radio-group">
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="text-size" value="regular" checked>
                  <span class="visual-box">Aa</span>
                </label>
                <div class="option-label">Regular</div>
              </div>
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="text-size" value="large">
                  <span class="visual-box" style="font-size: 1.375rem;">Aa</span>
                </label>
                <div class="option-label">Large</div>
              </div>
            </div>
          </div>
          <div class="mb-5">
            <h3>Text Style</h3>
            <div class="radio-group text-style-options">
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="text-style" value="default" checked>
                  <span class="visual-box">Default</span>
                </label>
              </div>
              <div class="col">
                <label class="radio-option">
                  <input type="radio" name="text-style" value="dyslexia">
                  <span class="visual-box">Dyslexia-Friendly</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <script src="/js/change-settings.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

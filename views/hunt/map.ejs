<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map - MUSA x The Hunt Museum</title>
    <link rel="icon" href="/img/favicon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Onest:wght@100..900&display=swap">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="/js/apply-settings.js"></script>
    <link rel="stylesheet" href="/css/the-hunt-museum-style.css">
  </head>
  <body>
    <%- include("../partials/header-hunt") %>

    <main>
      <!-- Find your way around section -->
      <section class="find-your-way py-5">
        <div class="container">
          <h2 class="mb-5 text-center">Find Your Way Around</h2>
          <div class="row">
            <div class="col-md-8">
              <img src="/img/map-all.jpg" class="gallery-img all active" alt="All floors map">
              <img src="/img/map-ground-floor.png" class="gallery-img floor1" alt="Map of ground floor">
              <img src="/img/map-first-floor.png" class="gallery-img floor2" alt="Map of first floor">
              <img src="/img/map-top-floor.png" class="gallery-img floor3" alt="Map of top floor">
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-auto">
              <div class="button-row">
                <button type="button" class="btn btn-active me-2" onclick="filterImages('all')">All</button>
                <button type="button" class="btn btn-not-active me-2" onclick="filterImages('floor1')">Ground</button>
                <button type="button" class="btn btn-not-active me-2" onclick="filterImages('floor2')">First</button>
                <button type="button" class="btn btn-not-active me" onclick="filterImages('floor3')">Top</button>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Virtual walkthrough section -->
      <section class="py-5">
        <div class="container">
          <h2>Virtual Walkthrough</h2>
          <div class="ratio ratio-16x9 my-4">
            <iframe 
              src="https://www.youtube-nocookie.com/embed/Vxb7-xVFquU?rel=0&modestbranding=1"
              title="Virtual Walkthrough of the Hunt Museum"
              allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
              allowfullscreen 
              loading="lazy" 
              referrerpolicy="strict-origin-when-cross-origin">
            </iframe>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <%- include("../partials/footer") %>

    <script src="/js/menu-hunt.js"></script>
    <script src="/js/active-link.js"></script>
    <script src="/js/map-buttons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>